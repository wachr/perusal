{
  "private": true,
  "name": "perusal",
  "description": "A simple mind-mapping tool written in Preact.",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "build:gh": "GITHUB_PAGES=perusal preact build && dot-json ./build/manifest.json start_url \"perusal\"",
    "dev": "preact watch",
    "lint": "eslint src",
    "serve": "sirv build --port 8080 --cors --single",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/preact": "^2.0.1",
    "babel-jest": "^27.3.1",
    "dot-json": "^1.2.2",
    "eslint": "^7.17.0",
    "eslint-config-preact": "^1.1.3",
    "jest": "^27.3.1",
    "preact-cli": "^3.0.0",
    "sirv-cli": "^1.0.3"
  },
  "dependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.0.4",
    "@mui/material": "^5.0.4",
    "browser-fs-access": "^0.20.5",
    "isomorphic-dompurify": "^0.15.0",
    "preact": "^10.1.0",
    "preact-render-to-string": "^5.1.2",
    "prop-types": "^15.7.2"
  }
}
