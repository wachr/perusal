{
  "private": true,
  "name": "perusal",
  "description": "A simple mind-mapping tool written in Preact with MUI and react-router.",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "build:gh": "prettier --check . && GITHUB_PAGES=perusal preact build && dot-json ./build/manifest.json start_url \"perusal\"",
    "dev": "preact watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "serve": "sirv build --port 8080 --cors --single",
    "serve:gh": "sirv gh-local --port 8080 --cors --single",
    "test": "jest",
    "watch": "onchange --initial . --exclude-path .gitignore -- prettier --write . && eslint . --fix; echo {{event}} to {{file}}"
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-transform-runtime": "^7.16.5",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.16.5",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/preact": "^2.0.1",
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "babel-jest": "^27.4.5",
    "dot-json": "^1.2.2",
    "eslint": "^7.32.0",
    "eslint-config-preact": "^1.1.3",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-react": "^7.28.0",
    "fast-check": "^3.3.0",
    "jest": "^27.4.5",
    "jsdom-worker": "^0.2.1",
    "onchange": "^7.1.0",
    "preact-cli": "^3.0.0",
    "prettier": "2.5.1",
    "sirv-cli": "^1.0.3"
  },
  "dependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.2.5",
    "@mui/material": "^5.2.5",
    "browser-fs-access": "^0.23.0",
    "dompurify": "^2.3.4",
    "immer": "^9.0.15",
    "nanoid": "^3.1.29",
    "nanoid-dictionary": "^4.3.0",
    "preact": "^10.1.0",
    "preact-render-to-string": "^5.1.2",
    "react-router-dom": "^6.2.1",
    "use-immer": "^0.7.0"
  }
}
