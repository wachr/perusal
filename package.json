{
  "private": true,
  "name": "perusal",
  "description": "A simple mind-mapping tool written in Preact with MUI and react-router.",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "build:gh": "prettier --check . && GITHUB_PAGES=perusal preact build && dot-json ./build/manifest.json start_url \"perusal\"",
    "dev": "preact watch",
    "format": "prettier-eslint '**/*.*' --write",
    "lint": "eslint src",
    "pretty": "prettier --write .",
    "pretty:check": "prettier --check .",
    "serve": "sirv build --port 8080 --cors --single"
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "dot-json": "^1.2.2",
    "eslint": "^7.32.0",
    "eslint-config-preact": "^1.1.3",
    "eslint-plugin-react": "^7.28.0",
    "preact-cli": "^3.0.0",
    "prettier": "2.5.1",
    "prettier-eslint": "^13.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "sirv-cli": "^1.0.3"
  },
  "dependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@mui/material": "^5.0.4",
    "preact": "^10.1.0",
    "preact-render-to-string": "^5.1.2",
    "react-router-dom": "^6.2.1"
  }
}
